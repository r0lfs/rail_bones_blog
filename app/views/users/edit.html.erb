<h1>Users#edit</h1>
<div class="row">
	
<div class="col-sm-12">
<h1>Update Your Info</h1>
<%= form_with model: @user do |f| %>
	<div class="form-group">
		<%= f.text_field :first_name, placeholder: "First Name", :maxlength => 25, :class => 'sign_in sign_in_top' %>
	</div>
	<div class="form-group">
		<%= f.text_field :last_name, placeholder: "Last Name", :maxlength => 25, :class => 'sign_in' %>
	</div>
	<div class="form-group">
		<%= f.text_field :dis_name, placeholder: "*Display Name", :maxlength => 25, :class => 'sign_in' %>
	</div>
	<div class="form-group">
		<%= f.text_field :email, placeholder: "*Email", :maxlength => 50, :class => 'sign_in' %>
	</div>
	<div class="form-group">
		<%= f.password_field :password, placeholder: "*Password", :maxlength => 25, :class => 'sign_in' %>
	</div>
	<div class="form-group">
		<%= f.text_area :about, placeholder: 'About', :maxlength => 500, :class => 'sign_in' %>
	</div>
	<p class="sign_in_notes">
		* denotes required field
	</p>
	<%= f.submit :class => 'btn btn-primary'  %>
<% end %>
</div>
</div>