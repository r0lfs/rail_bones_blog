<h1>Log into Jonestown Getdown!</h1>	
<% if flash[:alert] %>
	<p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: sessions_path, scope: 'login' do |f| %>
	<%= f.email_field :email, placeholder: 'Email' %>
	<%= f.password_field :password, placeholder: 'Password' %>
	<%= f.submit "Log In" %>
<% end %>